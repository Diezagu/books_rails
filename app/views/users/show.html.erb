<div>
  <h2>Author</h2>
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar.variant(resize_to_limit: [100, 100]) %>
  <% end %>
  <p>Name: <%= @user.name %> </p>
  <p>Age: <%= @user.age %> </p>
  <% @user.books.each do |book| %>
    <ol>
      <li>
        <p> <%= book.title %> </p>
        <p> <%= book.pages %> </p>
      </li>
    </ol>
  <% end %>
  <hr>
  <%= link_to 'Back', users_path(format: :html) %>
</div>