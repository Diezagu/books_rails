<div class='shadow'>
  <div class='container mx-auto'>
    <nav class="nabvar">
      <div class="menu">
        <% if user_signed_in? %>
          <% if current_user.avatar.attached? %>
           <%= image_tag(current_user.avatar.variant(resize_to_limit: [200, 200])) %>
          <% else %>
            <%= image_tag('avatar_default.png') %>
          <% end %>

          <div class="menu-content">
            <%= link_to 'My books', books_path, method: :get %>
            <%= link_to 'Edit profile', edit_user_registration_path, method: :get %>
            <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
          </div>
        <% end %>
      </div>
    </nav>
  </div>
</div>
