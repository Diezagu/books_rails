<!DOCTYPE html>
<html>
  <head>
    <title>BookProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "application", defer: true %>
  </head>

  <body class='container mx-auto'>
    <% if flash[:notice] %>
      <p> <%= flash[:notice] %> </p>
    <% elsif flash[:alert] %>
      <p> <%= flash[:alert] %> </p>
    <% end %>
    <%= yield %>
  </body>
</html>
